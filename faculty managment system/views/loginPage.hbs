<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, whitesmoke, skyblue);
            color: #fff;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            margin: 0;
        }
        .login-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 2rem;
            padding-top: 4rem;
            width: 25rem;
            height: auto;
            margin: auto;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3);
        }
        .form-control, .btn {
            border-radius: 8px;
        }
        .btn {
            background-color: #28a745;
            color: white;
            border: none;
        }
        .btn:hover {
            background-color: #218838;
        }
        .text-muted {
            font-size: 0.9rem;
        }
        .login-header {
            text-align: center;
            margin-bottom: 1rem;
        }
        .login-header h1 {
            font-size: 1.8rem;
            color: #28a745;
        }
        .login-header p {
            color: #6c757d;
        }
        .form-label {
            color: #000;
        }
        footer {
            background-color: #000;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
        }
    </style>
</head>
<body>
    {{> navbar}}
    <div class="login-container">
        <div class="login-header">
            <h1>Login</h1>
            <p>Access your account</p>
        </div>

        <!-- Alert Message for Wrong Password -->
        {{#if error}}
        <div id="errorAlert" class="alert alert-danger text-center" role="alert">
            Incorrect username or password. Please try again.
        </div>
        {{/if}}

        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
            </div>
            <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select class="form-control" id="role" name="role" required>
                    <option value="">Select Role</option>
                    <option value="Admin">Admin</option>
                    <option value="Faculty">Faculty</option>
                </select>
            </div>
            <button type="submit" class="btn w-100">Login</button>
        </form>
        <div class="text-center mt-3">
            <p class="text-muted">Don't have an account? 
                <a href="/signup" class="text-success fw-bold">Sign Up</a>
            </p>
        </div>
    </div>
    <footer>
        <p>&copy; 2024 Faculty Management System. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Automatically hide alert message after 3 seconds
        const errorAlert = document.getElementById('errorAlert');
        if (errorAlert) {
            setTimeout(() => {
                errorAlert.style.display = 'none';
            }, 3000); // 3000 milliseconds = 3 seconds
        }
    </script>
</body>
</html>
